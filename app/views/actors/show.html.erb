<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @actor.name %>
</p>

<p>
  <b>Dob:</b>
  <%= @actor.dob %>
</p>

<p>
  <b>Filmography:</b>
  <ul>
    <% @actor.movies.each do |movie| %>
      <li><%= movie.title %></li>
    <% end %>
  </ul>
</p>


